<div class="w-full">

<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
    <%= notice %>
  </p>
<% end %>
<h1 class="font-bold product-spacing text-xl mb-6 pb-2 border-b-2">
  You Pragmatic Catalog
</h1>

<ul>
  <% @products.each do |product| %>
    <li class='flex product-spacing'>
      <%= image_tag(product.image_url, style: 'width: 150px', class: 'object-contain product-spacing w-40 h-48 shadow mr-6') %>
      <div>
        <h2 class="font-bold text-lg mb-3"><%= product.title %></h2>
        <p>
          <%= sanitize(product.description) %>
        </p>
        <div class="mt-3">
          <%= number_to_currency(product.price) %>
        </div>
      </div>
    </li>
  <% end %>
</ul>

</div>
